---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import CertificationCard from '../components/CertificationCard.astro';
import SkillGrid from '../components/SkillGrid.astro';
import { getAboutData, getBrandInfo, getCertifications } from '../utils/content';

const aboutData = getAboutData();
const brandInfo = getBrandInfo();
const certifications = getCertifications();
---

<Layout>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-r from-blue-600 to-indigo-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white sm:text-5xl lg:text-6xl">
          About Me
        </h1>
        <p class="mt-6 text-xl text-blue-100 max-w-3xl mx-auto">
          Passionate about transforming data into actionable insights that drive business growth
        </p>
      </div>
    </div>
  </section>

  <!-- Professional Overview -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          Professional Overview
        </h2>
      </div>
      
      <div class="prose prose-lg mx-auto text-gray-600 mb-12">
        <p class="text-xl leading-relaxed">
          {aboutData.bio}
        </p>
      </div>

      <!-- Key Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <div class="text-center">
          <div class="text-4xl font-bold text-blue-600 mb-2">
            {aboutData.experience_years}
          </div>
          <div class="text-gray-600 font-medium">Years Experience</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-blue-600 mb-2">
            {aboutData.projects_completed}
          </div>
          <div class="text-gray-600 font-medium">Data Systems Integrated</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-blue-600 mb-2">
            {aboutData.gpa}
          </div>
          <div class="text-gray-600 font-medium">University GPA</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Technical Skills -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          Technical Expertise
        </h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          Comprehensive skill set spanning data science, engineering, and modern development practices
        </p>
      </div>
      
      <SkillGrid skills={aboutData.skills.technical} />
    </div>
  </section>

  <!-- Soft Skills -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          Core Competencies
        </h2>
        <p class="mt-4 text-xl text-gray-600">
          Beyond technical skills, I bring strategic thinking and collaborative leadership
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {aboutData.skills.soft.map((skill) => (
          <div class="flex items-center p-4 bg-gray-50 rounded-lg">
            <svg class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700 font-medium">{skill}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Professional Certifications -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          Professional Certifications
        </h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          Industry-recognized credentials that validate my expertise in data science and AI
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {certifications.map((certification) => (
          <CertificationCard certification={certification} />
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-blue-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white sm:text-4xl mb-4">
        Ready to Collaborate?
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Let's discuss how my expertise can contribute to your data science initiatives
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button 
          variant="secondary" 
          size="lg" 
          href="/contact"
          class="bg-white text-blue-600 hover:bg-gray-50"
        >
          Get In Touch
        </Button>
        <Button 
          variant="ghost" 
          size="lg" 
          href={`mailto:${brandInfo.email}`}
          class="text-white border-white hover:bg-white hover:text-blue-600"
        >
          Send Email
        </Button>
      </div>
    </div>
  </section>
</Layout>