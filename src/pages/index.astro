---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import CertificationCard from '../components/CertificationCard.astro';
import Button from '../components/Button.astro';
import { getSiteData, getHighlights, getFeaturedProjects, getCertifications } from '../utils/content';
import { withBase } from '../utils/url';

const siteData = getSiteData();
const highlights = getHighlights();
const featuredProjects = getFeaturedProjects(2);
const certifications = getCertifications();
---

<Layout>
  <!-- Hero Section -->
  <Hero />

  <!-- Highlights Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          Proven Impact
        </h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          Measurable results from data-driven solutions that create real business value
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
        {highlights.map((highlight) => (
          <div class="text-center bg-white rounded-xl p-8 shadow-sm border border-gray-200">
            <div class="text-4xl font-bold text-blue-600 mb-2">
              {highlight.number}
            </div>
            <div class="text-lg font-semibold text-gray-900 mb-2">
              {highlight.label}
            </div>
            <div class="text-gray-600">
              {highlight.description}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          Featured Work
        </h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          Selected projects showcasing expertise in data science, analytics, and business intelligence
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
        {featuredProjects.map((project) => (
          <ProjectCard project={project} variant="featured" showFullDescription={true} />
        ))}
      </div>

      <div class="text-center">
        <Button variant="primary" size="lg" href={withBase('/work')}>
          View All Projects
          <svg class="ml-2 -mr-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </Button>
      </div>
    </div>
  </section>

  <!-- Professional Certifications Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          Professional Certifications
        </h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          Industry-recognized certifications in data science, artificial intelligence, and predictive analytics
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {certifications.map((certification) => (
          <CertificationCard certification={certification} />
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-16 bg-blue-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white sm:text-4xl">
        Ready to transform your data into insights?
      </h2>
      <p class="mt-4 text-xl text-blue-100 max-w-3xl mx-auto">
        Let's discuss how data science can drive measurable impact for your organization
      </p>
      <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href={withBase('/contact')}>
          Get In Touch
        </Button>
        <Button 
          variant="ghost" 
          size="lg" 
          href={withBase('/SalehAlhuqayl_CV_EN.pdf')} 
          target="_blank"
          class="text-white border-white hover:bg-white/10"
        >
          Download Resume
        </Button>
      </div>
    </div>
  </section>
</Layout>
